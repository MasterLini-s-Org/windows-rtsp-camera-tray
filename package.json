{
  "name": "windows-rtsp-camera-tray",
  "version": "1.0.0",
  "description": "Leichtgewichtiges Electron-Tray-Tool für Windows, mit dem du deine EZVIZ-/Hikvision-Kameras schnell im Blick hast. Über einen globalen Shortcut öffnet sich ein kleines Overlay-Fenster mit einem Grid deiner Kameras (optional nach Standorten/Gruppen sortiert).",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win nsis"
  },
  "build": {
    "appId": "com.linus.rtspcameratray",
    "productName": "RTSP Camera Tray",
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static",
        "to": "ffmpeg-static",
        "filter": [
          "ffmpeg.exe"
        ]
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MasterLini-s-Org/windows-rtsp-camera-tray.git"
  },
  "keywords": [
    "rtsp",
    "ip-camera",
    "ipcam",
    "camera",
    "cctv",
    "nvr",
    "surveillance",
    "security",
    "video",
    "streaming",
    "livestream",
    "ffmpeg",
    "electron",
    "express",
    "desktop-app",
    "windows",
    "tray",
    "system-tray",
    "always-on-top",
    "grid",
    "multiview",
    "multi-camera",
    "monitoring",
    "viewer"
  ],
  "author": "MasterLini",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MasterLini-s-Org/windows-rtsp-camera-tray/issues"
  },
  "homepage": "https://github.com/MasterLini-s-Org/windows-rtsp-camera-tray#readme",
  "dependencies": {
    "express": "^5.2.1",
    "ffmpeg-static": "^5.3.0"
  }, 
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0"
  }
}
